
<div id="main-left-side" class="pure-u-1-2">
<div class="l-box">
<% if @games.any? %>
  <% @games.each do |game| %>
  <div class="l-box">
    <a href="<%= "/games/#{game.id}" %>"> <%= "#{game.title}" %></a><p><%= "#{game.released_on}" %></p>
    <br />  
    <p><%= "#{game.description}" %></p>
  </div>
  <% end %>
<% else %>
  <p>No games in the database yet!</p>
<% end %>
</div>
</div>

